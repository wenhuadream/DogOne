/* pages/about/about.wxss */
.container-gy{
  background-color: #eee;
  height: 100vh;
  display: flex;/* 变为弹性盒子布局模式 */
  flex-direction: column;/* 变为竖排列*/
  justify-content: space-around;/* 上下布局居中*/
  align-items:center;/*元素居中显示*/
}
.about{
  padding: 15rpx;
  background-color: #fff;
}
.logo-image{
  display: block;
  width: 200rpx;/*px为绝对单位，rpx为相对单位，所有设备的宽度都为750rpx*/
  height: 200rpx;
  margin-left: 250rpx;

  display: flex;
  justify-content: center; 
}
.scroll-view{
  border-radius: 10rpx;
  position: absolute;
  width: 94%;
  top: 10%;
  left: 3%;
  right: 3%;
  box-shadow: 3rpx 4rpx 8rpx rgba(0, 0, 0, 0.3);
}
.com{
  width: 90%;
	position: absolute;
  bottom: 5%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;/* 变为竖排列*/
  justify-content: space-around;/* 上下布局居中*/
  justify-content: center;
  left: 5%;
}