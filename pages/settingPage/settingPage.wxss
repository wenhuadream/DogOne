/* pages/funtionPage/functionPage.wxss */
.bluetooth-detail {
    width: 95%;
    margin: 0 auto;
    padding: 10px 20px;
    box-sizing: border-box;
    border-bottom: 1px solid #ddd;
}
.card {
  border-radius: 10rpx;
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,.3);
  align-items: center;
  display: flex;
  justify-content: center;
}
/*字体颜色设置font-family: "Courier New", Courier, monospace;*/
  .date-text {
  font-family: "Courier New", Courier, monospace;
  font-size: 100rpx;
  font-weight: bold;
  color: rgb(19, 4, 84);
  }

.list {
  max-height: 45vh;
}
.function-input{
  width: 80%;
	position: relative;
  font-size: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0rpx 10%; 
}
.input{
  border: 1rpx solid #666;
  width: 400rpx;
  padding: 20rpx 10rpx;
  font-size: 32rpx;
}
.function-button-div {
	width: 100%;
	position: absolute;
	bottom: 20%;
  font-size: 16rpx;
}
.function-button-div1 {
	width: 100%;
	position: relative;
}
.function-button-div2 {
	width: 100%;
	position: relative;
	top: 20px;	
}

/*底部发送按钮*/
.function-button-send {
	width: 90%;
	position: absolute;
  bottom: 5%;
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 5%;
}


/*左边的功能按钮*/
.function-button_left {
	width: 40%;
	height: 44px;
	/*border: 1px solid #f0ad4e;
	background-color: #f0ad4e;*/
	float: left;
	left: 6%;
}
/*右边的功能按钮*/
.function-button_right {
	width: 40%;
	height: 44px;
	/*border: 1px solid #f0ad4e;
	background-color: #f0ad4e;*/
	float: left;
	left: 14%;
}

.function-button {
	width: 100%;
  height: 44px;
  margin-top: 5%;
}

/*复选框*/
radio-group{
